@model AdvertsWebApp.Models.Advert
<h2>Izveidot sludinājumu</h2>

@using (Html.BeginForm())
{
    <div>
        <lable>Sludinājuma nosaukums</lable>
        @Html.EditorFor(model => model.Name)
    </div>

    <div>
        <lable>Sludinājuma teksts</lable>
        @Html.EditorFor(model => model.AdvertText)
    </div>

    <div>
        <lable>Sludinājuma cena</lable>
        @Html.EditorFor(model => model.Price)
    </div>

    <input type="Submit" value="Saglabāt šo sludinājumu"/>
}